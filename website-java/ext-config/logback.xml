<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Appenders -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<charset>UTF-8</charset>
			<pattern>%date %-5level %logger{0} - %message%n</pattern>
		</encoder>
	</appender>

    <!-- Loggers -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>